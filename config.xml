<?xml version='1.0' encoding='utf-8'?>
<widget id="rocks.guitarlearning.sft" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Simple Fretboard Trainer</name>
    <description>
        Simple and free app that will help you memorize all of the notes on your fretboard.
    </description>
    <author email="jackrivers.studio@gmail.com" href="http://sft.guitarlearning.rocks/">
        Jack Rivers Studio
    </author>
    <content src="index.html" />
    <icon src="ikona.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="orientation" value="default" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />

        <splash platform="android" qualifier="port-ldpi" src="res/screen/android/android_200x320.png" />
        <splash platform="android" qualifier="port-mdpi" src="res/screen/android/android_320x480.png" />
        <splash platform="android" qualifier="port-hdpi" src="res/screen/android/android_480x800.png" />
        <splash platform="android" qualifier="port-xhdpi" src="res/screen/android/android_720x1280.png" />
        <splash platform="android" qualifier="port-xxhdpi" src="res/screen/android/android_960x1600.png" />
        <splash platform="android" qualifier="port-xxxhdpi" src="res/screen/android/android_1280x1920.png" />

        <splash platform="android" qualifier="land-ldpi" src="res/screen/android/android_320x200.png" />
        <splash platform="android" qualifier="land-mdpi" src="res/screen/android/android_480x320.png" />
        <splash platform="android" qualifier="land-hdpi" src="res/screen/android/android_800x480.png" />
        <splash platform="android" qualifier="land-xhdpi" src="res/screen/android/android_1280x720.png" />
        <splash platform="android" qualifier="land-xxhdpi" src="res/screen/android/android_1600x960.png" />
        <splash platform="android" qualifier="land-xxxhdpi" src="res/screen/android/android_1920x1280.png" />

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>

    <splash src="splash.png" />
    <preference name="SplashScreenDelay" value="1500" />
    <preference name="SplashScreenSpinnerColor" value="white" />


    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-insomnia" />
    <plugin name="cordova-plugin-splashscreen" source="npm" />

</widget>
